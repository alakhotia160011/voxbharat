# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AI Services
CARTESIA_API_KEY=
ANTHROPIC_API_KEY=

# Postgres (auto-injected by Railway)
DATABASE_URL=

# Auth — REQUIRED in production
# Generate with: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=

# Public URL (Railway domain, e.g. https://voxbharat-production.up.railway.app)
PUBLIC_URL=

# CORS — comma-separated frontend origins (e.g. https://voxbharat.com,https://preview.voxbharat.com)
# Leave empty for permissive mode (local dev only)
FRONTEND_URL=

# Google OAuth (optional — enables "Sign in with Google")
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=

# Email notifications (optional)
GMAIL_USER=
GMAIL_APP_PASSWORD=
NOTIFY_EMAIL=

# Port (Railway injects PORT, but set explicitly for consistency)
PORT=3002
